<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gpaucarSemana2Tarea.Vistas.vLogin"
            >
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
        <Label 
            Text="Aplicación de Notas Ver.1.1"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>

        <Image Source="https://www.uisrael.edu.ec/wp-content/uploads/2023/01/logo-uisrael@2x-e1674848533171.png"
          HeightRequest="100"
          />


        <Label 
            Text="Bienvenido Docente, Identifiquese por favor:"
            HorizontalTextAlignment="Center"
            FontSize="17"
            TextColor="White"
            />

               
        <Entry x:Name="txtUsuario" 
               Placeholder="Digite Usuario"
               MaxLength="7"
               />

        <Entry x:Name="txtcontrasena" 
               Placeholder="Digite Contraseña"
               IsPassword="True"
               />
        <Button 
            x:Name="btnInicio"
            Text="Entrar"
            Clicked="btnInicio_Clicked"/>


    </VerticalStackLayout>
</ContentPage>